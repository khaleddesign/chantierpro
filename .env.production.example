# Production Environment Variables

# Database - Use PostgreSQL in production
DATABASE_URL="postgresql://username:password@host:5432/chantierpro_prod?schema=public"

# Next Auth - CRITICAL: Change these values for production
NEXTAUTH_URL=https://yourdomain.com
NEXTAUTH_SECRET=super-secure-random-string-at-least-32-characters-long

# Production Mode
NODE_ENV=production

# Security
FORCE_HTTPS=true
SECURE_COOKIES=true

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=error

# Cache Redis for production performance
REDIS_URL=redis://redis-server:6379

# Email Service (required for production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-production-email@domain.com
SMTP_PASS=your-app-specific-password

# File Upload Limits
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Database Connection Pool
DATABASE_MAX_CONNECTIONS=10
DATABASE_CONNECTION_TIMEOUT=30000

# Performance Optimization
DISABLE_SOURCE_MAPS=true
COMPRESS_STATIC_FILES=true

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30